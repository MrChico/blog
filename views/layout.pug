doctype html
html
	head
		title= title
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
		block headscripts  // placeholder for scripts
		link(rel='stylesheet', href='/styles/style.css')
		block styles  // placeholder for styles
	body
		div(class='header')
			div(class='blog-info')
				h1(class='blog-name'): a(href="/") Erik Ekstedt
				p(class='blog-description') I am interested in AI and minds

			div(class='topnav')
				a(href="/") Home
				a(href="/note") Notes
				a(href="/workflow") Workflow
				a(href="/vim") Vim
				a(href="/papers") Papers
				a(href="/books") Books
				a(style="float:right" href="/about") About
		div(class='content')
			block content
		div(class='footer')
			a(href='https://www.github.com/ErikEkstedt'): img(src="/icons/github.svg" style="width: 100px")
